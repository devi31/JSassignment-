// project to create and publish NFTS.

// a variable to hold NFT's

const devi_NFTs=[];

// this function will take in some values as parameters, create an
// NFT object using the parameters passed to it for its metadata, 
// and store it in the variable above.
function mintNFT (Name,code,type,colour,price) {
    const devi_NFT={
        "Name":Name,
        "code":code,
        "type":type,
        "colour":colour,
        price:price
    }
devi_NFTs.push(devi_NFT);
console.log("Minted-->"+Name); 
}
// create a "loop" that will go through an "array" of NFT's
// and print their metadata with console.log()
function listNFTs () {
    for(let i=0;i<devi_NFTs.length;i++)
    {
        console.log("\nID: \t\t"+(i+1));
        console.log("Brand Name: "+devi_NFTs[i].Name);
        console.log("Code: \t\t"+devi_NFTs[i].code);
        console.log("Type: \t\t"+devi_NFTs[i].type);
        console.log("Colour: \t"+devi_NFTs[i].colour);
        console.log("Price: \t\t"+devi_NFTs[i].price);
    }

}

// print the total number of NFTs we have minted to the console
function getTotalSupply() {
console.log("\n The Total NFTs Minted are:"+devi_NFTs.length);
}

// call your functions below this line
mintNFT("elisha","E121","ethnic/suit","red",1200);
mintNFT("diva","E111","western/dress","blue",1950);
listNFTs();
getTotalSupply();


